<!DOCTYPE html>
<html>
  <head>
    <title>Testguru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1><%= link_to 'TestGuru', root_path %></h1>
      <p class="nav user">
      <% if logged_in? %>
        Welcome, <b><%= current_user.name %></b>! <%= link_to 'Logout', logout_path, method: :delete %>
      <% else %>
        <%= link_to 'Register', signup_path %> | <%= link_to 'Login', login_path %>
      <% end %>
      </p>

    <%= yield %>
    <br>
    <%= render 'shared/footer' %>
  </body>
</html>
